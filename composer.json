{
    "name": "maxoplata/simple-locize",
	"description": "A lightweight library for handling translations via the Locize API",
	"keywords": ["locize", "translation", "internationalization", "i18n"],
	"type": "library",
    "license": "MIT",
	"minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Maxoplata\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Maxamilian Demian",
            "email": "max@maxdemian.com"
        }
    ],
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/Maxoplata/simple-locize-php"
		}
	],
	"scripts": {
		"phpcs": "phpcs",
		"phpunit": "phpunit tests"
	},
    "require-dev": {
		"squizlabs/php_codesniffer": "^3.7",
		"vlucas/phpdotenv": "^5.5",
        "phpunit/phpunit": "^9.6"
	}
}
